<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/richBlack"
    android:scrollbars="none"
    tools:context=".presentation.ui.screens.SignInSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_transparent_png" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/roundbox"
            android:drawableStart="@drawable/baseline_alternate_email_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/aliceBlue"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:padding="24dp"
            android:textColor="@color/davysGrey"
            android:textColorHint="@color/davysGrey" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/roundbox"
            android:drawableStart="@drawable/round_lock_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/aliceBlue"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="24dp"
            android:textColor="@color/davysGrey"
            android:textColorHint="@color/davysGrey" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="12dp"
            android:padding="16dp"
            android:text="Its my first time"
            android:textColor="@color/davysGrey" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/chillRed"
            android:fontFamily="@font/questrialregular"
            android:padding="16dp"
            android:text="Sign In/Login"
            android:textSize="20sp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>