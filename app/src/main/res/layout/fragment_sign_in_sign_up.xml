<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/richBlack"
    android:orientation="vertical"
    tools:context=".presentation.ui.screens.SignInSignUp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_transparent_png" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/roundbox"
        android:drawableStart="@drawable/baseline_alternate_email_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/aliceBlue"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:padding="24dp"
        android:textColor="@color/davysGrey"
        android:textColorHint="@color/davysGrey" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundbox"
        android:drawableStart="@drawable/round_lock_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/aliceBlue"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="24dp"
        android:textColor="@color/davysGrey"
        android:textColorHint="@color/davysGrey" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/chillRed"
        android:fontFamily="@font/questrialregular"
        android:padding="16dp"
        android:text="Sign In/Login"
        android:textSize="20sp"
        app:cornerRadius="12dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Or"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="continue with"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/roundring"
            android:backgroundTint="@color/aliceBlue"
            android:padding="4dp"
            android:src="@drawable/google_logo" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/roundring"
            android:backgroundTint="@color/aliceBlue"
            android:src="@drawable/ghub_logo" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/roundring"
            android:backgroundTint="@color/aliceBlue"
            android:src="@drawable/x_logo" />
    </LinearLayout>

</LinearLayout>